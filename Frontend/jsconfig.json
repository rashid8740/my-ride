{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "jsx": "react-jsx",
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["src/**/*"]
}
